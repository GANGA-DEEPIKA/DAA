def convert(s: str, numRows: int) -> str:
    if numRows == 1 or numRows >= len(s):
        return s
    rows = [''] * numRows
    row, step = 0, -1
    for char in s:
        rows[row] += char
        if row == 0 or row == numRows - 1:
            step = -step
        row += step
    return ''.join(rows)
input = "PAYPALISHIRING"
num_rows = 3
print(convert(input, num_rows))  




